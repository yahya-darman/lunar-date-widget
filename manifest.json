{
  "manifest_version": 3,
  "name": "Ramadan Timer & Islamic Calendar",
  "version": "1.0",
  "description": "Track time until Ramadan and display Islamic calendar",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "alarms",
    "storage",
    "geolocation"
  ],
  "host_permissions": [
    "https://api.aladhan.com/*",
    "https://ipapi.co/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 